algoritmo higher_between;
variáveis
    a, b, c: real;
fim-variáveis

início
    imprima("Bem-vindo ao programa que te mostra o maior entre três valores"); /* Boa-vindas ao usuário */
    /* entrada de dados: */
    imprima("Digite o valor de a: ");
    a:= leia();
    imprima("Digite o valor de b: ");
    b:= leia();
    imprima("Digite o valor de c: ");
    c:= leia();
    /*Descobrindo o maior valor usando conectivos lógicos:*/
    se (a>b)e(a>c) então
        imprima("O maior valor é: ",a);
    senão
        se (b>a)e(b>c) então
            imprima("O maior valor é: ",b);
        senão
            imprima("O maior valor é: ",c);
        fim-se
    fim-se
fim
