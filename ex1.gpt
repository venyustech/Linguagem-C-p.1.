algoritmo media;

variáveis
    a,b,m : real;
fim-variáveis
início
    
    imprima("Bem-vindo ao programa que calcula a media entre dois numeros"); /* boas-vindas ao usuário */
    
    /* entrada de dados do usuário: */
    imprima("Digite o primeiro numero");
    a:=leia();
    imprima("Digite o segundo numero");
    b:=leia();
    
    m:= (a+b)/2.0; /* formula: */
    imprima ("A media eh:");
    imprima (m);
fim
